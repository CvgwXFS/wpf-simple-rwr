<Window x:Class="rwr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rwr"
        mc:Ignorable="d"
        Title="rwr助眠" Height="380" Width="520">
    <Grid>
        <DockPanel HorizontalAlignment="Left" Height="360" LastChildFill="False" VerticalAlignment="Top" Width="880">
            <StackPanel Width="100" VerticalAlignment="Top" Margin="10,30,0,0">
                
                <Button x:Name="rwr_num1" Content="一个" Height="30" Click="rwr_num1_Click"/>
                <Button x:Name="rwr_num2" Content="两个" Height="30" Click="rwr_num2_Click"/>
                <Button x:Name="rwr_num3" Content="三个" Height="30" Click="rwr_num3_Click"/>
                <Button x:Name="rwr_num4" Content="四个" Height="30" Click="rwr_num4_Click"/>
                <Button x:Name="rwr_num5" Content="五个" Height="30" Click="rwr_num5_Click"/>
                <Button x:Name="rwr_ref" Content="开关" Height="30" Click="rwr_ref_Click"/>
                <Button x:Name="rwr_set" Content="参数set" Height="30" Click="rwr_set_Click"/>
                <TextBlock TextWrapping="Wrap" Text="最短间隔/ms"/>
                <TextBox x:Name="freq_s" TextWrapping="Wrap" Text="750" Width="100"/>
                <TextBlock TextWrapping="Wrap" Text="最长间隔/ms"/>
                <TextBox x:Name="freq_l" TextWrapping="Wrap" Text="1500" Width="100"/>
                <TextBlock TextWrapping="Wrap" Text="0~内半径~120"/>
                <TextBox x:Name="r_1" TextWrapping="Wrap" Text="60" Width="100"/>
                
            </StackPanel>
            <StackPanel Width="100" VerticalAlignment="Top" Margin="300,30,0,0">
                <Button x:Name="rwr_sounds" Content="音效切换" Height="30" Click="rwr_sounds_Click"/>
            </StackPanel>
        </DockPanel>
        <Canvas x:Name="rwr" Background="#FF101010" Width="300" Height="300" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,30,0,0">
            <Path Stroke="GreenYellow" StrokeThickness="2">
                <Path.Data>
                    <CombinedGeometry GeometryCombineMode="Xor">
                        <CombinedGeometry.Geometry1>
                            <EllipseGeometry RadiusX="140" RadiusY="140" Center="150,150" />
                        </CombinedGeometry.Geometry1>
                        <CombinedGeometry.Geometry2>
                            <EllipseGeometry RadiusX="15" RadiusY="15" Center="150,150" />
                        </CombinedGeometry.Geometry2>
                    </CombinedGeometry>
                </Path.Data>
            </Path>
            <Line X1="142" Y1="150" X2="158" Y2="150" Stroke="GreenYellow"  StrokeThickness="2" />
            <Line X1="150" Y1="142" X2="150" Y2="158" Stroke="GreenYellow"  StrokeThickness="2" />
        </Canvas>
        <Canvas x:Name="rwr_e1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,30,0,0">

        </Canvas>
        <Canvas x:Name="rwr_e2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,30,0,0">

        </Canvas>
        <Canvas x:Name="rwr_e3" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,30,0,0">

        </Canvas>
        <Canvas x:Name="rwr_e4" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,30,0,0">

        </Canvas>
        <Canvas x:Name="rwr_e5" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,30,0,0">

        </Canvas>

        

    </Grid>
</Window>
